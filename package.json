{
  "name": "workflow-mcp",
  "version": "2.0.0",
  "description": "WorkflowMCP - Complete product development lifecycle management system with Phase 2 features: deletion, data linking, dependency management, and dashboard",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "start": "node src/index.js",
    "dev": "node --watch src/index.js",
    "test": "node --test tests/*.test.js",
    "legacy": "node src/index.js",
    "migrate": "node src/database/migrate.js",
    "migrate:collaboration": "node src/database/migrate-collaboration.js",
    "migrate:collaboration:backup": "node src/database/migrate-collaboration.js --backup",
    "sqlite-server": "node src/sqlite-server.js"
  },
  "keywords": [
    "mcp",
    "workflow",
    "project-management",
    "prd",
    "task-management",
    "planning",
    "dashboard",
    "dependency-management",
    "data-linking",
    "claude-code"
  ],
  "author": "foswmine",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.4.0",
    "joi": "^17.13.3",
    "playwright": "^1.55.0",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/foswmine/workflow-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/foswmine/workflow-mcp/issues"
  },
  "homepage": "https://github.com/foswmine/workflow-mcp#readme"
